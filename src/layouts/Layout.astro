---
interface Props {
	title: string;
}
// Supports weights 100-900
import "@fontsource-variable/onest"
import AsideMenu from '../components/AsideMenu.astro';

import { ViewTransitions } from 'astro:transitions';

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<ViewTransitions />
	</head>
	<body>
		<div id="app" class="relative h-screen p-2 gap-2 ">
			<aside class="[grid-area:aside] flex-col flex overflow-y-auto ">
				<AsideMenu />
			
			<main class="[grid-area:main] rounded-lg bg-zinc-900 overflow-y-auto"></main>
			<footer class="[grid-area:player] bg-white-200"></footer>
			<slot />
		</aside>
		</div>
	</body>
</html>
<style>
	#app{
		display: grid;
		grid-template-areas:
		"aside main main"
		"player player player" ;
		grid-template-columns: 350px 1fr ;
		grid-template-rows: 1fr auto ;
	}
</style>
<style is:global>
	:root {
		color-scheme: light dark ;
	}
	html {
		background-color: black;
		font-family: "Onest", system-ui, sans-serif;
		
	}
	body{
		background: 06060605;
		display: flex;
		flex-direction: column;
		justify-content: center;
		min-height: 100vh;


	}
</style>
